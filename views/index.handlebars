<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/articles">Article Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" id="savedArticles" href="/saved">Saved Articles</a>
      <a class="btn btn-primary nav-item nav-link" href="/scrape" id="scrapeArticles">Scrape New Articles</a>
      <a class="btn btn-danger nav-item nav-link" href="/clear" id="clearArticles">Clear Articles</a>
    </div>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Article Scraper</h1>
    <p class="lead">New York Times Edition</p>
  </div>
</div>

<div class="container">
  <div class="row" id="articleInput">

    {{#each articles}}
    <div class="col-12">

      <div class="card">
        <h5 class="card-header" id="title">
          <a href="{{link}}">{{title}}</a>
        </h5>

        <button data-id="{{_id}}" class="saveArticle">Save Article</button>

        <div class="card-body">
          <p class="card-text" id="summary">{{summary}}</p>
          <button class="btn btn-primary" id="commentButton">Leave Comment</button>
          <p class="card-text" id="commentText">{{comment}}</p>
        </div>
        <div id="comments"></div>
      </div>
    </div>
    {{/each}}
  </div>
</div>