<div class="container">
  <div class="row" id="articleInput">
    {{#each articles}}
    <div class="card">
      <h5 class="card-header" id="title">
        <a href="{{link}}">{{title}}</a>
      </h5>

      <button data-articleid="{{_id}}" class="saveArticle">Save Article</button>

      <div class="card-body">
        <p class="card-text" id="summary">{{summary}}</p>
      </div>
    </div>
    {{/each}}
  </div>
